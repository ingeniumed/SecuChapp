<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <EditText
        android:id="@+id/password"
        android:textColor="#ffffffff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="174dp"
        android:ems="10"
        android:hint="enter password here"
        android:inputType="textPassword" >
    </EditText>

    <EditText
        android:id="@+id/email_address"
        android:textColor="#ffffffff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="62dp"
        android:ems="10"
        android:hint="Enter user name here"
        android:inputType="textEmailAddress" >
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:text="	Log In	"
        android:textColor="#ffffffff"
        tools:context=".SecureChat" />

    <CheckBox
        android:id="@+id/remember_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/log_in"
        android:layout_below="@+id/password"
        android:layout_marginTop="36dp"
        android:textColor="#ffffffff"
        android:text="Remember me?" />

    <CheckBox
        android:id="@+id/log_in_automatically"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/remember_password"
        android:layout_below="@+id/remember_password"
        android:text="Log in automatically"
        android:textColor="#ffffffff" />

</RelativeLayout>
